{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting": "Information",
      "Microsoft.AspNetCore.Routing": "Information"
    }
  },
  "AllowedHosts": "*",
  
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },

  "DivarScraper": {
    "BaseUrl": "https://divar.ir",
    "ApiBaseUrl": "https://api.divar.ir",
    "RequestDelayMs": 2000,
    "MaxRetryAttempts": 3,
    "TimeoutSeconds": 15,
    "UserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36",
    "RateLimitPerMinute": 30,
    "MaxConcurrentRequests": 5
  },

  "DataAnalysis": {
    "MaxRecordsPerAnalysis": 50000,
    "DefaultSampleSize": 100,
    "CacheExpirationMinutes": 30,
    "ExportFormats": ["csv", "json"],
    "SupportedDistricts": ["1", "2", "3", "6", "15"],
    "BaselineDate": "2024-06-12",
    "BaselineWindowDays": 7,
    "RecentWindowDays": 7
  },

  "FileStorage": {
    "DataDirectory": "Data",
    "ExportsDirectory": "Exports",
    "TempDirectory": "Temp",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [".csv", ".json"],
    "CleanupIntervalHours": 24,
    "RetentionDays": 30
  },

  "Api": {
    "Version": "1.0.0",
    "Title": "Divar Real Estate Analyzer API",
    "Description": "API for analyzing Tehran real estate market data from Divar.ir",
    "ContactName": "Divar Analyzer Team",
    "ContactUrl": "https://github.com/yourusername/divar-analyzer",
    "EnableSwagger": true,
    "EnableCors": true,
    "DefaultPageSize": 50,
    "MaxPageSize": 1000
  },

  "Security": {
    "EnableApiKeyValidation": false,
    "RequireHttps": false,
    "AllowedOrigins": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitWindowMinutes": 15
  },

  "Monitoring": {
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "LogRequestDetails": false,
    "LogResponseTime": true,
    "EnableApplicationInsights": false
  },

  "Districts": {
    "LocationMap": {
      "1": { "Name": "Shemiran", "Lat": 35.7797, "Lng": 51.4183 },
      "2": { "Name": "Vanak", "Lat": 35.7797, "Lng": 51.4026 },
      "3": { "Name": "Zaferaniyeh", "Lat": 35.7869, "Lng": 51.4399 },
      "6": { "Name": "Yusefabad", "Lat": 35.7219, "Lng": 51.3892 },
      "15": { "Name": "Shahrak", "Lat": 35.6669, "Lng": 51.3753 }
    },
    "PriceMultipliers": {
      "1": 3.5,
      "2": 3.0,
      "3": 4.0,
      "6": 2.5,
      "15": 1.8
    }
  },

  "BackgroundServices": {
    "EnableScheduledScraping": false,
    "ScrapingIntervalHours": 6,
    "DataCleanupIntervalHours": 24,
    "HealthCheckIntervalMinutes": 5,
    "EnableAutoBackup": false,
    "BackupIntervalHours": 168
  }
}